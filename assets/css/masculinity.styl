
#leeByungHun 
  display block
  margin 0 auto 5% auto

.ninjaImage
  display inline-block
  position relative
  width 50%
  img
    width 100%

.curtain
  transition opacity 0.5s linear
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  opacity 0
  background-color black
  color white
  font-size 200%
  font-family 'Open Sans', sans-serif
  font-weight 300
  text-align center

  .curtain-content
    margin-top 30%
    margin-left 5%
    margin-right 5%
    line-height 130%

  &.active
    opacity 0.9

  &.left
    border-right 2px solid white

  &.right
    border-left 2px solid white

.coincidentally
  transition opacity 0.5s linear
  opacity 0
  position absolute
  top 40%
  color white
  font-size 200%
  width 100%
  padding 3% 0
  font-family 'Open Sans', sans-serif
  font-weight 300
  text-align center
  pointer-events none
  background-color black

  &.active
    opacity 1
    z-index 2


